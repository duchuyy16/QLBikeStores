
@{
    ViewData["Title"] = "ListCategoryBrand";
    
}
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="" style="text-align: center;">
                <h1><strong><i>List Of Products</i></strong></h1>
            </div>
            @foreach (Product item in Model)
            {
                <div class="col-md-12 col-lg-4 mb-4 mb-lg-0 my-3">
                    <div class="card">
                        <div class="d-flex justify-content-between p-3">
                            <p class="lead mb-0">Authentic</p>
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong"
                             style="width: 35px; height: 35px;">
                                <p class="text-white mb-0 small">new</p>
                            </div>
                        </div>
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/4.webp"
                         class="card-img-top" alt="Laptop" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p class="small"><a href="#!" class="text-muted">@item.Category.CategoryName</a></p>
                                @*<p class="small text-danger"><s>ddd</s></p>*@
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@item.ProductName</h5>
                            </div>
                            <div class="d-flex justify-content-between mb-3">

                                <h5 class="text-dark mb-0">Price: $@item.ListPrice</h5>
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <p class="text-muted mb-0">Available: <span class="fw-bold">@item.Stocks.Sum(p=>p.Quantity)</span></p>
                                <div class="ms-auto text-warning">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                            <div class="d-flex flex-row">
                                <button type="submit" class="btn btn-danger flex-fill ms-1" asp-action="AddToCart" asp-controller="Cart" asp-route-id="@*@Model.ProductId*@">Add To Cart <i class="fas fa-cart-plus"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
