@model QLBikeStores.Models.SignUpUserViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5 mt-2">
<form method="post" asp-action="SignUp">
                                    <div class="text-center">
                                        <h1 class="text-dark">User Registration</h1>
                                    </div>
                                    <h3 class="text-danger text-center">@TempData["errorMessage"]</h3>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label asp-for="Firstname"></label>
                                                <input type="text" asp-for="Firstname" placeholder="Enter firstname" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="Firstname" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label asp-for="Lastname"></label>
                                                <input type="text" asp-for="Lastname" placeholder="Enter lastname" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="Lastname" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Username"></label>
                                        <input type="text" asp-for="Username" placeholder="Enter username" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input type="text" asp-for="Email" placeholder="Enter email" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Phone"></label>
                                        <input type="text" asp-for="Phone" placeholder="Enter phone number" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label asp-for="Password"></label>
                                                <input type="password" asp-for="Password" placeholder="Enter password" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label asp-for="ConfirmPassword"></label>
                                                <input type="password" asp-for="ConfirmPassword" placeholder="Enter confirm password" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                    <label asp-for="IsActive"></label>
                                    <input type="checkbox" checked="checked" asp-for="IsActive" />
                                    </div>*@
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-outline-success btn-lg mb-1 float-right" value="Register" />
                                    </div>
                                </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

